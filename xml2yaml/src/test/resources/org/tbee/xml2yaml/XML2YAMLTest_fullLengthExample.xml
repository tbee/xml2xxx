<xml2yaml tag="clarkevans.com,2002:invoice">
	<num id="invoice">34843</num>
	<dat id="date">2001-01-23</dat>
	<grp id="bill-to" key="id001">
		<str id="given">Chris</str>
		<str id="family">Dumars</str>
		<grp id="address">
			<str id="lines"><![CDATA[
				458 Walkman Dr.
				Suite #292
			]]></str>
			<str id="city">Royal Oak</str>
			<str id="state">MI</str>
			<num id="postal">48046</num>
		</grp>
	</grp>
	<grp id="ship-to" ref="id001"/>
	<grp id="product">
		<item>
			<str id="sku">BL394D</str>
			<num id="quantity">4</num>
			<str id="description">Basketball</str>
			<num id="price">450.00</num>
		</item>
		<item>
			<str id="sku">BL4438H</str>
			<num id="quantity">1</num>
			<str id="description">Super Hoop</str>
			<num id="price">2392.00</num>
		</item>
	</grp>
	<num id="tax">251.42</num>
	<num id="total">4443.52</num>
	<str id="comments"><![CDATA[
    Late afternoon is best.
    Backup contact is Nancy
    Billsmer @ 338-4338.
	]]></str>
</xml2yaml>

